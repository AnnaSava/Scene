@page
@model Scene.Login.WebApp.Pages.Account.LoginModel
@{
}

<h2>Вход в приложение</h2>
<form method="post" asp-controller="Account" asp-action="Login"
            asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Input.Identifier"></label><br />
        <input asp-for="Input.Identifier" />
        <span asp-validation-for="Input.Identifier"></span>
    </div>
    <div>
        <label asp-for="Input.Password"></label><br />
        <input asp-for="Input.Password" />
        <span asp-validation-for="Input.Password"></span>
    </div>
    <div>
        <label asp-for="Input.RememberMe"></label><br />
        <input asp-for="Input.RememberMe" />
    </div>
    <div>
        <input type="submit" value="Войти" />
    </div>
</form>

